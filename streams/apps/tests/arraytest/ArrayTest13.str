/**
 * This tests array constant propagation in a style similar to
 * FMRadio.  The tricky part is propagating one constant field into
 * the array dimension of another field.
 **/

void->void pipeline ArrayTest13 {
    int bands = 10;
    int[bands] cutoff;
    
    for (int i=0; i<bands; i++) {
	cutoff[i] = i;
    }
    
    add Source();
    add Test(cutoff[5]);
    add Printer();
}

int->int filter Test(int j) {
    work pop 1 push 1 {
	push (j * pop());
    }
}

void->int stateful filter Source {
    int i = 0;
    work push 1 { push(i++); }
}

int->void filter Printer {
    work pop 1 { println(pop()); }
}
